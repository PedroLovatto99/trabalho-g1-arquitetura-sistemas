datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

generator client {
  provider = "prisma-client-js"
}

// Enum para os status do pedido (melhor pr√°tica)
enum OrderStatus {
  AWAITING_PAYMENT
  PAID
  PAYMENT_FAILED
  CANCELED
}

// Tipo para os produtos embutidos no pedido
type ProductItem {
  productId   String  
  productName String
  quantity    Int
  unitPrice   Float
}

// Modelo de Pedido (agora sem @relation)
model Order {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  total     Float
  status    OrderStatus @default(AWAITING_PAYMENT)
  products  ProductItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  clientId  String     
}