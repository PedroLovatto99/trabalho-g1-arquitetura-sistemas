datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}



model TypePayment {
  id        String    @id @default(uuid())
  name      String    @unique
  payments  Payment[]

  @@map("type_payments")
}

model Payment {
  id              String      @id @default(uuid())
  orderId         String

  typePaymentId   String      @map("type_payment_id")
  typePayment     TypePayment @relation(fields: [typePaymentId], references: [id], onDelete: Restrict)
  amountPaid      Decimal     @db.Decimal(12, 2) @map("amount_paid")

  paidAt          DateTime?   @map("paid_at")
  createdAt       DateTime    @default(now())    @map("created_at")
  updatedAt       DateTime    @updatedAt         @map("updated_at")

  @@index([typePaymentId])
  @@index([orderId])
  @@map("payments")
}